server {
    listen 80;
    server_name minio.lilac.com;
    ignore_invalid_headers off;
    client_max_body_size 0;
    proxy_buffering off;

    location / {
        autoindex on;
        proxy_pass http://127.0.0.1:13375;

        proxy_set_header Host $http_host;
        proxy_redirect off;
    }
}
