server {
    listen 80;
    server_name __HOSTNAME__;
    ignore_invalid_headers off;
    client_max_body_size 0;
    proxy_buffering off;

    location / {
        autoindex on;
        proxy_pass http://__HOST__:__PORT__;

        proxy_set_header Host $http_host;
        proxy_redirect off;
    }
}
